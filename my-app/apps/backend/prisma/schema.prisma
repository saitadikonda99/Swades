generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  conversations Conversation[]
  orders        Order[]
  payments      Payment[]
  createdAt     DateTime       @default(now())
}

model Conversation {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String
  agentType      AgentType?
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  createdAt      DateTime     @default(now())
}

model Order {
  id        String     @id @default(uuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  status    OrderStatus
  tracking  String?
  createdAt DateTime   @default(now())
}

model Payment {
  id        String        @id @default(uuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  amount    Float
  status    PaymentStatus
  createdAt DateTime      @default(now())
}

enum MessageRole {
  user
  agent
}

enum AgentType {
  router
  support
  order
  billing
}

enum OrderStatus {
  pending
  shipped
  delivered
  cancelled
}

enum PaymentStatus {
  paid
  refunded
  failed
}